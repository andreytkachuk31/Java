<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>Salesman</servlet-name>
        <servlet-class>web.salesman.SalesmanServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Salesman</servlet-name>
        <url-pattern>/Salesman</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Task</servlet-name>
        <servlet-class>web.task.TaskServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Task</servlet-name>
        <url-pattern>/Task</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TaskDelete</servlet-name>
        <servlet-class>web.task.TaskDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TaskDelete</servlet-name>
        <url-pattern>/TaskDelete</url-pattern>
    </servlet-mapping>

</web-app>
